---
import '@/styles/globals.css'
import Navbar from '@/components/NavMenu'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-zinc-950 text-white">
		<Navbar transition:persist client:load/>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Bebas';
		src: url('/fonts/BebasKai.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'Logo';
		src: url('/fonts/vtks.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	.Logo{
		font-family: 'Logo';
	}
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Bebas';
		background: #09090b;
		scroll-behavior: smooth;
		color-scheme: dark;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
